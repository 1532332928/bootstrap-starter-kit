{
    "name": "bootstrap-starter-kit",
    "version": "1.0.1",
    "private": true,
    "description": "Demo project for building a Bootstrap powered site via npm using Webpixels Components.",
    "author": "webpixels",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/webpixels/bootstrap-starter-kit.git"
    },
    "bugs": {
        "url": "https://github.com/webpixels/bootstrap-starter-kit/issues"
    },
    "homepage": "https://github.com/webpixels/bootstrap-starter-kit#readme",
    "scripts": {
        "build": "npm run css",
        "css-compile": "sass --load-path=node_modules --style=compressed --source-map --embed-sources --quiet --no-error-css resources/scss:assets/css/",
        "css-prefix": "postcss --replace assets/css/starter.css --use autoprefixer --map",
        "css-purge": "purgecss --css assets/css/starter.css --content index.html --output assets/css/",
        "css": "npm-run-all css-compile css-prefix",
        "server": "serve --listen 3000",
        "start": "npm-run-all --parallel watch server",
        "watch": "nodemon -e html,scss -x \"npm run css\"",
        "test": "npm run css-lint && npm run css"
    },
    "keywords": [
        "webpixels",
        "css",
        "sass",
        "js",
        "mobile-first",
        "responsive",
        "front-end",
        "web",
        "bootstrap",
        "utilities",
        "starter",
        "template"
    ],
    "devDependencies": {
        "@popperjs/core": "^2.9.2",
        "@webpixels/css": "^1.0.2",
        "autoprefixer": "^10.2.6",
        "bootstrap": "^5.0.2",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.0",
        "postcss-cli": "^8.3.1",
        "purgecss": "^4.0.3",
        "sass": "^1.35.1",
        "serve": "^11.3.2"
    }
}
